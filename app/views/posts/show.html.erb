<p>
  <strong>Book:</strong>
  <%= @post.book %>
  <%= @post.id %>
</p>
 
<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
	<div>
	    <h4><%=comment.content %></h4>
	    <h6><%=comment.created_at%></h6>
	    <h4> ---------------------------- </h4>
    </div>
<% end %>


<h3>Write A Comment</h3>
<div>
  <%=form_for :comment , url: "../comments/create_comment/" + @post[:id].to_s , method:"post" do |f| %>

   <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
   </p>
 
   <p>
    <%= f.submit %>
   </p>

  <% end %>
</div>

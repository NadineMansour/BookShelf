
<h1>New Post</h1>
<div>
	<%= form_for :post, url: posts_path do |f| %>

	<p>
		<%= f.label :book %><br>
		<%= f.text_field :book %>
	</p>
 
	<p>
		<%= f.label :author %><br>
		<%= f.text_field:author %>
	</p>

	<p>
		<%= f.label :genre %><br>
		<%= f.text_field :genre %>
	</p>

	 <p>
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</p>
 
	<p>
		<%= f.submit %>
	</p>
	<% end %>
</div>